<div class="options flexcol">
  <label>
    <input name="keep-open" class="keep-open-input" type="checkbox" checked="{{keepOpen}}">
    <span class="keep-open-span">{{localize 'UTOPIA.CommonTerms.keepopen'}}</span>
  </label>
  
  <ol>
    {{#each options as |option key|}}
    <li data-tooltip="{{option.system.description}}" data-tooltip-direction="LEFT">

      {{#if option.system.block}}
      <div class="grid grid-5col options-center">
        
        <div class="grid-span-3">
          <a class="source" data-option="{{option._id}}">
            <span>{{option.name}}</span>
          </a>
        </div>

        <div class="grid-span-2">
          <span class="select" data-option="{{option._id}}" data-type="{{option.type}}">Select</span>
        </div>

      </div>
      {{/if}}

      {{#if option.system.points}} 
        <div class="grid grid-9col options-center">

          <div>
            <a class="position" data-option="{{option._id}}">
              <span>{{option.system.position}}</span>
            </a>
          </div>

          <div class="grid-span-3">
            <a class="source" data-option="{{option._id}}">
              <span>{{option.name}}</span>
            </a>
          </div>

          <span>
            <i class="fa-solid fa-shield"></i>
            {{option.system.points.body}}
          </span>

          <span>
            <i class="fa-solid fa-brain"></i>
            {{option.system.points.mind}}
          </span>

          <span>
            <i class="fa-solid fa-flame"></i>
            {{option.system.points.soul}}
          </span>

          <div class="grid-span-2">
            <span class="select" data-option="{{option._id}}" data-type="{{option.type}}">Select</span>
          </div>

        </div>

      {{/if}}

    </li>
    {{/each}}
  </ol>
</div>