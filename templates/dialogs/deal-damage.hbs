<div class="deal-damage-dialog">
  <form>
    <div class="flexrow" style="justify-content: space-evenly;">
      <div class="data-overlay">
        <i class="fa-solid fa-snowflake fa-fw" data-tooltip="{{localize 'UTOPIA.DamageTypes.chill'}}"></i>
        <span class="data-number">
          {{numberFormat defenses.chill.total decimals=0}}
        </span>
      </div>

      <div class="data-overlay">
        <i class="fa-solid fa-bolt fa-fw" data-tooltip="{{localize 'UTOPIA.DamageTypes.energy'}}"></i>
        <span class="data-number">
          {{numberFormat defenses.energy.total decimals=0}}
        </span>
      </div>

      <div class="data-overlay">
        <i class="fa-solid fa-fire fa-fw" data-tooltip="{{localize 'UTOPIA.DamageTypes.heat'}}"></i>
        <span class="data-number">
          {{numberFormat defenses.heat.total decimals=0}}
        </span>
      </div>
    
      <div class="data-overlay">
        <i class="fa-solid fa-hand-fist fa-fw" data-tooltip="{{localize 'UTOPIA.DamageTypes.physical'}}"></i>
        <span class="data-number">
          {{numberFormat defenses.physical.total decimals=0}}
        </span>
      </div>
    
      <div class="data-overlay">
        <i class="fa-solid fa-brain fa-fw" data-tooltip="{{localize 'UTOPIA.DamageTypes.psyche'}}"></i>
        <span class="data-number">
          {{numberFormat defenses.psyche.total decimals=0}}
        </span>
      </div>
    </div>
 
    <div class="flexrow" style="margin-top: 10px; gap: 10px;">
      
      <label for="damage">{{localize 'UTOPIA.CommonTerms.damage'}}</label>
      <input type="text" name="damage" id="damage" value="{{total}}" />
    
      <label for="type">{{localize 'UTOPIA.CommonTerms.damageType'}}</label>
      <select name="type" id="type">
        <option value="chill" {{#if (eq type "chill")}}selected{{/if}}>{{localize 'UTOPIA.DamageTypes.chill'}}</option>
        <option value="energy" {{#if (eq type "energy")}}selected{{/if}}>{{localize 'UTOPIA.DamageTypes.energy'}}</option>
        <option value="heat" {{#if (eq type "heat")}}selected{{/if}}>{{localize 'UTOPIA.DamageTypes.heat'}}</option>
        <option value="physical" {{#if (eq type "physical")}}selected{{/if}}>{{localize 'UTOPIA.DamageTypes.physical'}}</option>
        <option value="psyche" {{#if (eq type "psyche")}}selected{{/if}}>{{localize 'UTOPIA.DamageTypes.psyche'}}</option>
        <option value="kinetic">{{localize 'UTOPIA.CommonTerms.kineticForce'}}</option>
      </select>
      </div>
    </div>

    <div class="flexrow data-blocks">
      <div class="flexcol">
        <button type="button" class="action-button" data-action="block">
          {{localize 'UTOPIA.Actor.block'}}: {{block}}
        </button>
      </div>
      <div class="flexcol">
        <button type="button" class="action-button" data-action="dodge">
          {{localize 'UTOPIA.Actor.dodge'}}: {{dodge}}
        </button>
      </div>
    </div>
  </form>
</div>
